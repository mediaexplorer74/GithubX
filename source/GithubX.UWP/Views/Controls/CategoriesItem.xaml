<UserControl
    x:Class="GithubX.UWP.Views.Controls.CategoriesItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GithubX.UWP.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
	mc:Ignorable="d" 
    d:DesignHeight="300"
    d:DesignWidth="400">

	<toolkit:DropShadowPanel Style="{StaticResource ShadowCard}">
		<StackPanel Style="{StaticResource CardStack}" Orientation="Horizontal" RequestedTheme="Dark">
			<StackPanel.Background>
				<LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
					<GradientStop Color="#5B247A"/>
					<GradientStop Color="#1BCEDF" Offset="1"/>
				</LinearGradientBrush>
			</StackPanel.Background>
			<TextBlock Text="❤" FontSize="36" Margin="4 8" VerticalAlignment="Center"/>
			<TextBlock FontWeight="SemiBold" Width="120" MaxLines="1" FontSize="22"
					   VerticalAlignment="Center" Text="Favorites" FontFamily="Candara"/>
			<Button Content="" FontFamily="Segoe MDL2 Assets" Background="Transparent" VerticalAlignment="Center"
					Style="{StaticResource CircleButtonStyle}" HorizontalAlignment="Right"/>
		</StackPanel>
	</toolkit:DropShadowPanel>
</UserControl>
