<Application
    x:Class="GithubX.UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GithubX.UWP"
    xmlns:media="using:Windows.UI.Xaml.Media"
	xmlns:Windows10version1809="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 7)"
	RequestedTheme="Light">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<XamlControlsResources  xmlns="using:Microsoft.UI.Xaml.Controls"/>
				<ResourceDictionary Source="Theme.xaml"/>
			</ResourceDictionary.MergedDictionaries>
			<Color x:Key="AcrylicBrushTintColor1">#eee</Color>
			<Color x:Key="AcrylicBrushFallbackColor1">#eee</Color>
			<media:AcrylicBrush x:Key="HeaderAcrylic" 
                                        BackgroundSource="HostBackdrop" 
                                        TintOpacity="0.8" 
                                        TintColor="#66ffffff" 
                                        FallbackColor="#eee"/>

			<media:AcrylicBrush x:Key="DialogBoxAcrylicBrush" 
                            BackgroundSource="Backdrop" 
                            TintOpacity="0.1" 
                            TintColor="#19FFFFFF" 
                            FallbackColor="#FFF" />
		</ResourceDictionary>
	</Application.Resources>
</Application>
