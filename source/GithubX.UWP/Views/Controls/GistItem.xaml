<UserControl
	x:Class="GithubX.UWP.Views.Controls.GistItem"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:GithubX.UWP.Views.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
	d:DesignHeight="300"
	d:DesignWidth="400"
	mc:Ignorable="d">
	<toolkit:DropShadowPanel Style="{StaticResource ShadowCard}">
		<StackPanel Style="{StaticResource CardStack}">
			<TextBlock
				Grid.Column="1"
				Margin="8,0"
				VerticalAlignment="Center"
				MaxLines="3"
				TextWrapping="Wrap">
				<Run Text="Bind full_name" /><LineBreak /><Run
					FontSize="11"
					FontWeight="SemiLight"
					Text="Description" />
			</TextBlock>
		</StackPanel>
	</toolkit:DropShadowPanel>
</UserControl>