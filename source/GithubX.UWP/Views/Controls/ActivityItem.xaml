<UserControl
	x:Class="GithubX.UWP.Views.Controls.ActivityItem"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:converters="using:GithubX.UWP.Converters"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:GithubX.UWP.Views.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">
	<UserControl.Resources>
		<converters:StringConcatConverter x:Key="StringConcatConverter" x:Name="StringConcatConverter" />
		<converters:TypeToActionStringConverter x:Key="TypeToActionStringConverter" x:Name="TypeToActionStringConverter" />
	</UserControl.Resources>
	<StackPanel Padding="4">
		<TextBlock Margin="0,4" FontWeight="SemiLight">
			<Hyperlink UnderlineStyle="None" NavigateUri="{Binding Actor.Login, Converter={StaticResource StringConcatConverter}, ConverterParameter='githubx://user/', ConverterLanguage='End'}">
				<Run Text="{Binding Actor.Login}" />
			</Hyperlink> <Run FontWeight="Bold" Text="{Binding Type, Converter={StaticResource TypeToActionStringConverter}}" />
		</TextBlock>
		<local:RepositoryItem Repo="{Binding Repo}" />
		<TextBlock Text="{Binding CreatedAt.LocalDateTime}" Style="{ThemeResource CaptionTextBlockStyle}"
				   HorizontalAlignment="Right" FontSize="10"/>
	</StackPanel>
</UserControl>